<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--扫描controller包-->
    <context:component-scan base-package="com.gusi.demo.seckill.controller"/>

    <!--开启SpringMVC注解模式-->
    <!--自动注册HandleMapping，HandlerAdapter
        提供一系列工具：数据绑定，数字日期format @NumberFormat@DataTimeFormat，xml/json的读写支持
    -->
    <mvc:annotation-driven/>


    <!-- 静态资源访问路径指定，也可使用下面的方式处理静态资源 -->
    <!--<mvc:resources mapping="/statics/**" location="/statics/"/>-->
    <!-- 用Web服务器的defaultServlet来处理静态文件 -->
    <mvc:default-servlet-handler/>

    <!-- 定义JSP -->
    <bean
            class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>


</beans>

